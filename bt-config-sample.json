{
	/*
	@type 	string 
	@description 	The IP address for the service to listen to.
	 */
	"binding_ip": "0.0.0.0",

	/*
	@type 	number
	@description	The port number for the service to listen to
	 */
	"port": 8080,

	/*
	@type	string
	@description 	The header name of the authentication token
	 */
	"authentication_header": "X-BT-AUTH",

	/*
	@type string
	@description The header name of the backend secret
	*/
	"backend_authentication_header": "X-BT-BACKEND-AUTH",

	/*
	@type string
	@description The backend secret used for backend APIs
	*/
	"backend_authentication_secret": null,

	/*
	@type string
	@description 	The application log level. 
					Valid Values:
						- trace
						- debug
						- info
						- warning
						- error
						- fatal
						- all
	*/
	"log_level": "info | warning | error | fatal",

	/*
	@type object
	@description 	The database configuration

	Note: This is not implemented yet.
	 */
	"database": {
		/*
		@type string
		@description	The kind of database.
		 */
		"dialect": "mysql",

		"pool": {
			"maxConnections": 20,
			"maxIdleTime": 30000
		},

		"replication": {
			/*
				Master write server
			 */
			"write": {
				"host": "127.0.0.1",
				"port": 3306,
				"username": "root",
				"password": "password",
				"database": "database"
			},

			/*
				Array of read-only servers
			 */
			"read": [
				{
					"host": "127.0.0.1",
					"port": 3306,
					"username": "root",
					"password": "password",
					"database": "database"
				}
			]
		}
	}
}